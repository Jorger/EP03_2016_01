doctype html
html
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
    link(rel='stylesheet', href='css/font-awesome.min.css')
    link(rel='stylesheet', href='css/onsen-css-components-default.css')
    link(rel='stylesheet', href='css/login.css')
    title!= titulo
  body.page
    .navigation-bar
      .navigation-bar__item.left.quarter.float-left
      .navigation-bar__item.full.float-left.text-centering
        span.navigation-bar__title.navigation-bar__line-height.float-left
          strong 
          !=titulo
      .navigation-bar__item.right.quarter.float-left
        span.icon-button--quiet.navigation-bar__line-height.font-weight-500
    .main-image-wrapper
      img(src='img/icon.png')
    form(action='/login', method='POST')
      div#errorMsg(align='center')
          !=error
      input#user.text-input--underbar(type='text', placeholder='Nombre de Usuario', value = '#{(usuario) ? usuario : ""}', name='username', autocomplete='off')
      input#pass.text-input--underbar(type='password', placeholder='Contrase√±a', value='', name='password')
      br
      button.button.login-button Ingresar
    br
    div(align='center')
      a(href='/registro') Registrarme
